generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  workflows WorkFlow[]
}


model WorkFlow {
  id           String        @id @default(uuid())
  triggerId    String
  user   User     @relation(fields: [userId], references: [id])
  userId       String
  triggerNodes TriggerNodes?
  actionsNodes ActionNodes[]
  workflowRun  WorkFlowRun[]
}

model TriggerNodes {
  id                    String                @id @default(uuid())
  workflow              WorkFlow              @relation(fields: [workflowId], references: [id])
  workflowId            String                @unique

  TriggerNodeId         String
  type  AvailableTriggerNodes @relation(fields: [TriggerNodeId], references: [id])
  }


model AvailableTriggerNodes {
  id          String         @id @default(uuid())
  name        String
  TriggerNode TriggerNodes[]
}

model ActionNodes {
  id                   String                @id @default(uuid())
  workflow             WorkFlow              @relation(fields: [workflowId], references: [id])
  workflowId           String
  ActionNodeId         String
  sortingOrder         Int                   @default(0)
  type                 AvailableActionNodes @relation(fields: [ActionNodeId], references: [id])
}

model AvailableActionNodes {
  id          String        @id @default(uuid())
  name        String
  actionNodes ActionNodes[]
}

model WorkFlowRun {
  id         String          @id @default(uuid())
  workflow   WorkFlow        @relation(fields: [workflowId], references: [id])
  workflowId String
  meta       Json
  outbox     WorkFlowOutBox?
}

model WorkFlowOutBox {
  id                  String      @id @default(uuid())
  WorkFlowRunId       String      @unique
  workFlowRun         WorkFlowRun @relation(fields: [WorkFlowRunId], references: [id])
}
